@model IdentityChatEmailNight.Entites.Message
@{
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}


<div class="email-right-box">
    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="text" asp-for="ReceiverEmail" class="form-control bg-transparent" placeholder=" Kime">
            </div>
            <div class="form-group">
                <input type="text" asp-for="Subject" class=" form-control bg-transparent" placeholder=" Konu">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" asp-for="MessageDetail" rows="15" placeholder="Mesajınız..."></textarea>
            </div>
            <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
        </form>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (ViewBag.ShowSuccess != null && (bool)ViewBag.ShowSuccess)
    {
        <text>
                Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                text: 'Mesaj Başarıyla Gönderildi',
                confirmButtonText: 'Tamam'
                }).then((result) => {
                if (result.isConfirmed) {
                window.location.href = '/Message/SendBox';
                }
                });
        </text>
    }
    else if (ViewBag.ShowError != null && (bool)ViewBag.ShowError)
    {
        <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        html: `<pre style="text-align: left;">@Html.Raw(ViewBag.ErrorMessage.Replace("\n", "<br/>"))</pre>`
                    });
        </text>
    }
</script>
